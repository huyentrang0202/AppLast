<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="15dp"
            android:text="1"
            android:textSize="20sp"
            android:id="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ten"
            android:text="Tên tác phâm :"
            android:layout_toRightOf="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textviewtentruyen"
            android:textColor="#000000"
            android:text="ten truyen"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/ten"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tp"
            android:text="Tác phâm :"
            android:layout_toRightOf="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_below="@id/ten"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@id/tp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:text="tacgia"
            android:id="@+id/textviewtentacgia"
            android:layout_below="@id/textviewtentruyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nguoidoc"
            android:text="Diễn đọc :"
            android:layout_toRightOf="@+id/textviewdanhsachindex"
            android:layout_below="@id/tp"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@id/nguoidoc"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:text="diendoc"
            android:layout_marginLeft="5dp"
            android:id="@+id/diendoc"
            android:layout_below="@id/textviewtentacgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>